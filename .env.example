# Spark vLLM Dashboard Environment Variables
# Copy this file to .env and modify as needed

# ============= Backend Configuration =============

# Path to the spark-vllm-docker repository
SPARK_DASHBOARD_SPARK_DOCKER_PATH=/home/user/spark-vllm-docker

# Docker container name for vLLM (default: vllm_node)
SPARK_DASHBOARD_CONTAINER_NAME=vllm_node

# Head node IP for CORS and cluster operations
SPARK_DASHBOARD_HEAD_NODE_IP=192.168.5.157

# vLLM server port (default: 8000)
SPARK_DASHBOARD_VLLM_PORT=8000

# API server port (default: 8080)
SPARK_DASHBOARD_API_PORT=8080

# ============= Frontend Configuration =============

# Backend API URL (for browser requests)
NEXT_PUBLIC_API_URL=http://localhost:8080

# WebSocket URL (for real-time updates)
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# ============= Docker Configuration =============

# Docker socket path (for container management)
DOCKER_SOCKET_PATH=/var/run/docker.sock